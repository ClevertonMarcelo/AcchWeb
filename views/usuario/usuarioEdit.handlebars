<form action="/usuarioEdit" method="POST">
    <input type="hidden" name="id" value="{{usuario._id}}">
    <p>Login:</p> <input type="text" name="login" value="{{usuario.login}}">
    <p>Senha:</p> <input type="text" name="senha" value="{{usuario.senha}}">
    <p>Pergunta Secreta:</p> <input type="text" name="pergunta_secreta" value="{{usuario.pergunta_secreta}}">
    <p>Resposta:</p> <input type="text" name="resposta_pergunta" value="{{usuario.resposta_pergunta}}">
    <br><br>

    <input type="submit" value="Editar">
</form>