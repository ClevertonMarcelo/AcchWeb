<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, inicial-scale=1.0">
    <link rel="stylesheet" href="css/stylecadastro.css">
    <link rel="stylesheet" href="css/stylehome.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <section>

        <h1>Cadastrar Usuario</h1>
        <form action="/usuarioEdit" method="POST">
            <fieldset>
                <div class="container">
                    <input type="hidden" name="id" value="{{usuario._id}}"><br>
                </div>
                <div class="container">
                    <label for="text">Nome usuario:</label>
                    <input type="text" name="nome" value="{{usuario.nome}}"><br>
                </div>
                <div class="container">
                    <label for="text">Data de Nascimento:</label>
                    <input type="date" name="datanasc" value="{{usuario.datanasc}}"><br>
                </div>
                <div class="container">
                    <label for="text">E-mail:</label>
                    <input type="text" name="email" value="{{usuario.email}}"><br>
                </div>
                <div class="container">
                    <label for="text">Login:</label>
                    <input type="text" name="login" value="{{usuario.login}}"><br>
                </div>
                <div class="container">
                    <label for="text">Senha:</label>
                    <input type="text" name="senha" value="{{usuario.senha}}"><br>
                </div>
                <div class="container">
                    <label for="text">Pergunta secreta:</label>
                    <input type="text" name="pergunta_secreta" placeholder="Digite uma pergunta secreta"><br>
                </div>
                <div class="container">
                    <label for="text">Resposta pergunta secreta:</label>
                    <input type="text" name="resposta_pergunta"
                        placeholder="Digite a resposta da pergunta secreta"><br><br>
                </div>
                <div class="container">
                    <label for="text">Grupo Usu√°rio:</label>
                    <input type="text" name="tipo" value="{{usuario.tipo}}"><br>
                </div>
            </fieldset>

            <div>
                <input type="submit" value="Editar">
            </div>
        </form>
    </section>
</body>