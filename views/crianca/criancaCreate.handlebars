<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, inicial-scale=1.0">
    <link rel="stylesheet" href="css/stylecadastro.css">
</head>

<body>
    <section>

        <h1>Cadastrar Aluno</h1>
        <form action="/criancaCreate" method="POST"> ​
            <fieldset>
                <div class="container">
                    <label for="text">Nome do aluno:</label>
                    <input type="text" name="nome" placeholder="Digite o nome do aluno"><br>
                </div>
                <div class="container">
                    <label for="text">RG do aluno:</label>
                    <input type="text" name="rg" placeholder="Digite o RG do aluno"><br>
                </div>
                <div class="container">
                    <label for="text">Nome do responsavel:</label>
                    <input type="text" name="nomedopai" placeholder="Digite o nome do pai do aluno">​
                </div>
                <div class="container">
                    <label for="text">Endereço aluno:</label>
                    <input type="text" name="endereco" placeholder="Digite o endereço do aluno ">​
                </div>
                <div class="container">
                    <label for="text">Bairro do aluno:</label>
                    <input type="text" name="bairro" placeholder="Digite o bairro do aluno"><br>
                </div>
                <div class="container">
                    <label>Data de nascimento aluno:</label>
                    <input type="date" name="datanasc" placeholder="Digite a data de nascimento do aluno"><br>
                </div>
                <div class="container">
                    <label>Turma do aluno:</label>
                    <input type="text" name="turma" placeholder="Digite o nome da turma do aluno"><br><br>
                </div>
            </fieldset>

            <div>
                <input id="buttoncadastro" type="submit" value="Cadastrar">
            </div>
        </form>
    </section>
</body>
