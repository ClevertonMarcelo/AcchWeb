    <p>Nome: </p> <input type="text" name="nome" value="{{crianca.nome}}">
    <p>RG: </p> <input type="text" name="rg" value="{{crianca.rg}}">
    <p>Nome do Responsável: </p> <input type="text" name="nomedopai" value="{{crianca.nomedopai}}">
    <p>Endereço: </p> <input type="text" name="endereco" value="{{crianca.endereco}}">
    <p>Bairro: </p> <input type="text" name="bairro" value="{{crianca.bairro}}">
    <p>Turma: </p> <input type="text" name="turma" value="{{crianca.turma}}">
